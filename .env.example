# Uptime Monitor Configuration
# Copy this file to .env and update the values

# Monitoring Configuration
UPTIME_CHECK_INTERVAL=5
UPTIME_TIMEOUT=30
UPTIME_MAX_RETRIES=3
UPTIME_URLS=https://example.com,https://google.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=uptime_monitor.log

# Notification Configuration
NOTIFICATIONS_ENABLED=false

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAILS=admin@example.com,alerts@example.com

# Webhook Notifications
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Database Configuration
DB_TYPE=sqlite
DB_PATH=uptime_monitor.db

# For PostgreSQL (uncomment and configure if using PostgreSQL)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=uptime_user
# DB_PASSWORD=your_password
# DB_DATABASE=uptime_monitor

